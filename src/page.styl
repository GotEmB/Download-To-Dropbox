@import "nib"

transition-transform()
	-webkit-transition: -webkit-transform arguments;
	-moz-transition: -moz-transform 2s arguments;
	-o-transition: -o-transform 2s arguments;
	transition: transform 2s arguments;

html, body
	position absolute
	width 100%
	height 100%
	background #cdd4dc url(bg.png)
	margin 0
	font-family Helvetica, Arial, sans-serif
	overflow hidden

body
	#headerbar
		position absolute
		left -50px
		right -50px
		height 50px
		background linear-gradient(top, #7d848c 0%, #4d545c 50%, #3d444c 50%, #0d141c 100%)
		box-shadow 0 0 10px #4d545c
		font-weight 300
	
		#title
			position absolute
			margin 12px auto
			width 100%
			text-align center
			font-size 26px
			line-height 1
			text-shadow 0 -1px 0 #374683
			color white
	
		#displayname, #quotaused
			position absolute
			margin auto
			right 0
			top 0
			padding-right 80px
			font-size 14px
			text-shadow 0 -1px 0 #374683
			line-height 1
			color white
	
		#displayname
			padding-top 7px
	
		#quotaused
			padding-top 29px

	#headerbackdrop
		position absolute
		top 50px
		left 0
		right 0
		height 1000px
		background linear-gradient(top, rgba(77, 84, 92, 0.2) 0%, rgba(77, 84, 92, 0.05) 15%, rgba(77, 84, 92, 0) 100%)

	#mainbox
		position absolute
		top 80px
		bottom 30px
		left 0
		right 0
		padding 0

		#columnscontainer
			position relative
			height 100%
			width 10px
			margin auto
			padding 0 20px
			transition width 0.5s ease

			div.columnbox
				position absolute
				background white
				border-radius 3px
				box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.4)
				margin 0 10px
				width 300px
				height 100%
				overflow-y auto
				padding 0 10px
				transition-transform 0.5s ease, opacity 0.5s ease
				
				&.moveLeft
					opacity 0
					transform translateX(-330px)
				
				div.columnbox_inner
					position relative
					
					div.column_inback
						position absolute
						left 0
						right 0
						top 0
						bottom 0
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
					
					div.itembox
						position relative
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
						margin-top -1px
						
						&:hover
							background rgba(205, 212, 220, 0.4)
							border-bottom solid 1px rgba(77, 84, 92, 0.3)
							border-top solid 1px rgba(77, 84, 92, 0.3)
						
						&.selected
							background #8d949c
							border-bottom solid 1px rgba(77, 84, 92, 0.5)
							border-top solid 1px rgba(77, 84, 92, 0.5)
							color white
							z-index 1
						
						&:nth-of-type(2)
							margin-top 10px
						
						&:last-of-type
							margin-bottom 10px
						
						div.item_image
							margin 10px 10px 6px 5px
							display inline-table
						
						div.item_text
							display inline-table
							margin 13px 0
							font-size 14px