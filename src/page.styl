@import "nib"

@keyframes rec
	from
		transform translateX(0)
	to
		transform translateX(25px)

html, body
	position absolute
	width 100%
	height 100%
	background #cdd4dc url(bg.png)
	margin 0
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	overflow hidden

body
	#headerbar
		position absolute
		left -50px
		right -50px
		height 50px
		background linear-gradient(top, rgba(215, 222, 230, 0.5) 0%, rgba(195, 202, 210, 0.5) 60%, rgba(182, 189, 197, 0.5) 90%, rgba(175, 182, 190, 0.5) 100%)
		box-shadow 0 0 4px #4d545c
		z-index 100
	
		#title
			position absolute
			margin 12px auto
			width 100%
			text-align center
			font-size 26px
			line-height 1
			text-shadow 0 2px 3px #E1E8F0
			color #1d242c
	
		#displayname, #quotaused
			position absolute
			margin auto
			right 0
			top 0
			padding-right 80px
			font-size 14px
			line-height 1
			text-shadow 0 1px 2px #E1E8F0
			color #1d242c
	
		#displayname
			padding-top 7px
	
		#quotaused
			padding-top 29px

	#headerbackdrop
		position absolute
		top 50px
		left 0
		right 0
		height 1000px
		background linear-gradient(top, rgba(77, 84, 92, 0.2) 0%, rgba(77, 84, 92, 0.05) 15%, rgba(77, 84, 92, 0) 100%)

	#mainbox
		position absolute
		top 50px
		bottom 0
		left 0
		right 0
		padding 30px 0
		overflow-x auto

		#columnscontainer
			position relative
			height 100%
			width 10px
			margin auto
			padding 0
			transition width 0.5s ease

			div.columnbox
				position absolute
				background white
				border-radius 3px
				box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.4)
				margin 0 50px
				width 300px
				height 100%
				overflow-y auto
				padding 0 10px
				transition transform 0.5s ease, opacity 0.5s ease
				
				&.moveLeft
					opacity 0
					transform translateX(-330px)
				
				div.columnbox_inner
					position relative
					
					div.column_inback
						position absolute
						left 0
						right 0
						top 0
						bottom 0
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
					
					div.itembox
						position relative
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
						margin-top -1px
						height 52px
						
						&:hover
							background rgba(205, 212, 220, 0.4)
							border-bottom solid 1px rgba(77, 84, 92, 0.3)
							border-top solid 1px rgba(77, 84, 92, 0.3)
						
						&.selected
							background #23619e
							border-bottom solid 1px rgba(77, 84, 92, 0.5)
							border-top solid 1px rgba(77, 84, 92, 0.5)
							color white
							z-index 1
						
						&:nth-of-type(2)
							margin-top 10px
						
						&:last-of-type
							margin-bottom 10px
						
						div.item_image
							position absolute
							top 10px
							left 5px
						
						div.item_text
							position absolute
							top 18px
							font-size 14px
							overflow ellipsis
							width 250px
							left 50px
						
							&.above_progress
								top 6px
						
						div.item_progressbar_back
							position absolute
							height 14px
							width 235px
							bottom 8px
							left 50px
							border solid 1px rgba(77, 84, 92, 0.5)
							background = rgba(77, 84, 92, 0.1)
							box-shadow inset 0 0 2px rgba(77, 84, 92, 0.5)
							overflow hidden
						
							div.item_progressbar_front
								position absolute
								top 0
								left 0
								bottom 0
								width 0%
								background linear-gradient(top, rgba(117, 124, 132, 1) 0%, rgba(97, 104, 112, 1) 60%, rgba(84, 91, 99, 1) 90%, rgba(77, 84, 92, 1) 100%)
								box-shadow 0 0 4px rgba(77, 84, 92, 1)
								transition width 0.5s ease
								overflow hidden
							
								div.item_progressbar_anim
									display none
									position absolute
									background-size 25px 25px
									top 0
									left -25px
									right 0
									bottom 0
									background linear-gradient(top left, white 0%, white 25%, transparent 25%, transparent 50%, white 50%, white 75%, transparent 75%, transparent 100%)
									opacity 0.2
									animation rec 0.5s linear infinite
					
					div.uploadbox
						display none
						
						input.item_text
							position absolute
							width 235px;
							border solid 1px rgba(77, 84, 92, 0.5)
							padding 4px
							margin 13px -4px
							left 48px
							font-family inherit
							font-size 14px
							background rgba(255, 255, 255, 0.5)
					
				&:hover div.columnbox_inner div.uploadbox
					display block
	
	#pathnamecontainer
		position absolute
		top 50px
		left 0
		bottom 0
		right 0
		background rgba(132, 139, 147, 0.5)
		transition background 0.2s ease
		z-index 50
		
		&.hide
			background transparent
			pointer-events none
		
		#pathnamecontainer_middle
			position absolute
			display table
			width 100%
			height 100%
			
			#pathnamecontainer_inner
				display table-cell
				vertical-align middle
			
				#pathnamebox
					position relative
					margin auto
					width 400px
					height 200px
					background #cdd4dc url(bg.png)
					border-radius 8px
					box-shadow 0 1px 8px rgb(77, 84, 92)
					transition transform 0.2s ease
				
					&.hide
						transform scale(0)
				
					#pathnamebox_back
						position absolute
						width 100%
						height 100%
						border-radius 8px
						background linear-gradient(top, rgba(215, 222, 230, 0.5) 0%, rgba(195, 202, 210, 0.5) 60%, rgba(182, 189, 197, 0.5) 90%, rgba(175, 182, 190, 0.5) 100%)
				
					#pleaseWait_pathnamebox
						position absolute
						width 108px
						top 46px
						left 146px
				
					#saveasbox
						display none
						position absolute
						top 20px
						left 20px
						right 20px
						bottom 20px
				
					#saveas_downarrow
						width 0
						height 0
						border-left 10px solid transparent
						border-right 10px solid transparent
						border-top 20px solid rgba(0, 0, 0, 0.5)
						margin 10px auto
				
					div.blacktextcontainer
						display block
						background rgba(0, 0, 0, 0.5)
						border 4px solid transparent
						padding 0
						margin 8px 0
						box-shadow 0 2px 3px #E1E8F0
						color #ddd
						border-radius 2px
						white-space nowrap
						overflow-x hidden
						cursor text
						
						#saveas_url, #saveas_path, #saveas_name, #saveas_dummyname
							outline none
							border none
							padding 0
							margin 0
							background none
							font-family inherit
							font-weight 500
							font-size 16px
							color inherit
							width 352px
						
						#saveas_path
							margin-left 2px
						
						#saveas_name
							color white
							margin-left -5px
						
						#saveas_dummyname
							display none
							width auto
				
					#saveas_ok, #saveas_cancel
						position absolute
						right 0
						bottom 0
						padding 6px
						width 60px
						border-radius 2px
						text-align center
						color white
						box-shadow inset 0 0 2px rgba(255, 255, 255, 0.5)
						cursor pointer
						font-size 16px
				
					#saveas_ok
						background linear-gradient(top, #5b4 0%, #492 60%, #381 90%, #270 100%)
						border 1px solid #270
						text-shadow 0 -1px 2px #270
					
						&:hover
							background linear-gradient(top, #6c5 0%, #5a3 60%, #492 90%, #381 100%)
					
						&:active
							background linear-gradient(bottom, #4a3 0%, #381 100%)
				
					#saveas_cancel
						background linear-gradient(top, #d54 0%, #b42 60%, #a31 90%, #920 100%)
						right 80px
						border 1px solid #920
						text-shadow 0 -1px 2px #920
					
						&:hover
							background linear-gradient(top, #e65 0%, #c53 60%, #b42 90%, #a31 100%)
					
						&:active
							background linear-gradient(bottom, #c43 0%, #a31 100%)