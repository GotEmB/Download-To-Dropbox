@import "nib"

@keyframes rec
	from
		transform translateX(0)
	to
		transform translateX(25)

html, body
	position absolute
	width 100%
	height 100%
	background #cdd4dc url(bg.png)
	margin 0
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	overflow hidden

body
	#headerbar
		position absolute
		left -50px
		right -50px
		height 50px
		background linear-gradient(top, rgba(215, 222, 230, 0.5) 0%, rgba(195, 202, 210, 0.5) 60%, rgba(182, 189, 197, 0.5) 90%, rgba(175, 182, 190, 0.5) 100%)
		box-shadow 0 0 4px #4d545c
	
		#title
			position absolute
			margin 12px auto
			width 100%
			text-align center
			font-size 26px
			line-height 1
			text-shadow 0 2px 3px #E1E8F0
			color #1d242c
	
		#displayname, #quotaused
			position absolute
			margin auto
			right 0
			top 0
			padding-right 80px
			font-size 14px
			line-height 1
			text-shadow 0 1px 2px #E1E8F0
			color #1d242c
	
		#displayname
			padding-top 7px
	
		#quotaused
			padding-top 29px

	#headerbackdrop
		position absolute
		top 50px
		left 0
		right 0
		height 1000px
		background linear-gradient(top, rgba(77, 84, 92, 0.2) 0%, rgba(77, 84, 92, 0.05) 15%, rgba(77, 84, 92, 0) 100%)

	#mainbox
		position absolute
		top 50px
		bottom 0
		left 0
		right 0
		padding 30px 0
		overflow-x auto

		#columnscontainer
			position relative
			height 100%
			width 10px
			margin auto
			padding 0
			transition width 0.5s ease

			div.columnbox
				position absolute
				background white
				border-radius 3px
				box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.4)
				margin 0 50px
				width 300px
				height 100%
				overflow-y auto
				padding 0 10px
				transition transform 0.5s ease, opacity 0.5s ease
				
				&.moveLeft
					opacity 0
					transform translateX(-330px)
				
				div.columnbox_inner
					position relative
					
					div.column_inback
						position absolute
						left 0
						right 0
						top 0
						bottom 0
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
					
					div.itembox
						position relative
						border-bottom solid 1px rgba(77, 84, 92, 0.1)
						border-top solid 1px rgba(77, 84, 92, 0.1)
						margin-top -1px
						
						&:hover
							background rgba(205, 212, 220, 0.4)
							border-bottom solid 1px rgba(77, 84, 92, 0.3)
							border-top solid 1px rgba(77, 84, 92, 0.3)
						
						&.selected
							background #23619e
							border-bottom solid 1px rgba(77, 84, 92, 0.5)
							border-top solid 1px rgba(77, 84, 92, 0.5)
							color white
							z-index 1
						
						&:nth-of-type(2)
							margin-top 10px
						
						&:last-of-type
							margin-bottom 10px
						
						div.item_image
							position absolute
							margin 10px 10px 6px 5px
						
						div.item_text
							position relative
							margin 18px 0
							font-size 14px
							text-overflow ellipsis
							overflow hidden
							white-space nowrap
							width 250px
							left 50px
						
						div.item_progressbar_back
							position relative
							height 14px
							width 235px
							margin 18px 0
							left 50px
							border solid 1px rgba(77, 84, 92, 0.5)
							background = rgba(77, 84, 92, 0.1)
							box-shadow inset 0 0 2px rgba(77, 84, 92, 0.5)
							overflow hidden
						
							div.item_progressbar_front
								position absolute
								top 0
								left 0
								bottom 0
								width 0%
								background linear-gradient(top, rgba(117, 124, 132, 1) 0%, rgba(97, 104, 112, 1) 60%, rgba(84, 91, 99, 1) 90%, rgba(77, 84, 92, 1) 100%)
								box-shadow 0 0 4px rgba(77, 84, 92, 1)
								transition width 0.5s ease
								overflow hidden
							
								div.item_progressbar_anim
									display none
									position absolute
									background-size 25px 25px
									top 0
									left -25px
									right 0
									bottom 0
									background linear-gradient(top left, white 0%, white 25%, transparent 25%, transparent 50%, white 50%, white 75%, transparent 75%, transparent 100%)
									opacity 0.2
									animation rec 0.5s linear infinite
					
					div.uploadbox
						display none
						
						div.item_text
							width 235px;
							text-overflow clip;
							border solid 1px rgba(77, 84, 92, 0.5)
							padding 4px
							margin 13px -4px
					
				&:hover div.columnbox_inner div.uploadbox
					display block